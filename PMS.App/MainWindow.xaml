<Window x:Class="PMS.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment ="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource TxtBlkStyle}">
                    Username
                </TextBlock>
                <TextBox Style="{StaticResource TxtBokStyle}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource TxtBlkStyle}">
                    Password
                </TextBlock>
                <PasswordBox Style="{StaticResource PwdBoxStyle}" Margin="10,5,5,5"></PasswordBox>
            </StackPanel>
            <Button Style="{StaticResource BtnStyle}">Login</Button>
        </StackPanel>
    </Grid>
</Window>
